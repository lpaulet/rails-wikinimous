<h1>My articles</h1>

<%= link_to "New article", new_article_path(@article) %>
<% @articles.each do |article| %>

<h4><%= link_to article.title, article_path(article) %></h4>

<%= link_to article_path(article),
    method: :delete,
    data: { confirm: "Are you sure?" } do %>
    <i class="far fa-trash-alt"></i>
<% end %>

<% end %>

